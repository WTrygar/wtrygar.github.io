---
import cssVars from "../styles/css-vars";
---

<div class="get-in-touch">
  <div class="text-content">
    <h2>Let's talk about your project</h2>
    <p>
      Ready to take it to the next level? Contact us today and find out how our
      expertise can help your business grow.
    </p>
  </div>
  <slot />
</div>

<style define:vars={cssVars}>
  .get-in-touch {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: var(--colorWhite);
    width: 90%;
    padding-bottom: 50px;
    position: absolute;
    bottom: 614px;
    background-image: url(./src/assets/shared/desktop/bg-pattern-call-to-action.svg);
    background-position: center;
    background-color: var(--colorPeach);
    border-radius: 20px;
    z-index: 10;
  }

  .get-in-touch .text-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .get-in-touch .text-content h2 {
    /* padding-top: 64px; */
    width: 80%;
  }

  .get-in-touch .text-content p {
    width: 90%;
    padding-bottom: 10px;
  }

  @media (min-width: 600px) and (max-width: 900px) {
    .get-in-touch {
      bottom: 350px;
    }

    .get-in-touch .text-content h2 {
      width: 60%;
    }

    .get-in-touch .text-content p {
      width: 70%;
    }
  }

  @media (min-width: 900px) {
    .get-in-touch {
      flex-direction: row;
      width: 80%;
      height: 300px;
      bottom: 450px;
      padding-bottom: 0;
    }

    .get-in-touch .text-content {
      justify-content: flex-start;
      align-items: flex-start;
      text-align: left;
      width: 65%;
    }

    .get-in-touch .text-content h2 {
      padding-top: 0;
      margin-bottom: 0;
    }

    .get-in-touch .text-content p {
      width: 60%;
    }
  }
</style>
