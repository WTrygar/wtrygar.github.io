---
import cssVars from "../styles/css-vars";

interface Props {
  class: string;
  title: string;
  img: string;
}

const { class: className, title, img } = Astro.props;
---

<div class={className}>
  <div class="card-image">
    <img src={img} alt="card image" />
  </div>
  <div class="card-text">
    <h3 class="card-title">{title}</h3>
  </div>
  <slot />
</div>

<style define:vars={{ cssVars, image: `url("${img}")` }}>
  .first-card,
  .second-card,
  .third-card {
    width: 90%;
    height: 300px;
    margin: 10px 0;
    display: flex;
    flex-direction: column;
    justify-content: unset;
    align-items: center;
    border-radius: 15px;
    margin-top: 70px;
    margin-bottom: 130px;
  }

  .first-card .card-image {
    background-image: linear-gradient(#d7d7d7, #ffffff);
  }
  .second-card .card-image {
    background-image: linear-gradient(to right, #d7d7d7, #ffffff);
  }
  .third-card .card-image {
    background-image: linear-gradient(#ffffff, #d7d7d7);
  }

  .card-image {
    width: 15rem;
    height: 15rem;
    border-radius: 50%;
  }

  .card-image img {
    width: 15rem;
    height: 15rem;
  }

  .first-card .card-text {
    display: flex;
    flex-direction: column;
    justify-content: unset;
    align-items: center;
    text-align: center;
  }

  .second-card .card-text {
    display: flex;
    flex-direction: column;
    justify-content: unset;
    align-items: center;
    text-align: center;
  }

  .third-card .card-text {
    display: flex;
    flex-direction: column;
    justify-content: unset;
    align-items: center;
    text-align: center;
  }

  .card-text .card-title {
    height: 2rem;
  }

  @media (min-width: 600px) and (max-width: 900px) {
  }

  @media (min-width: 900px) {
  }
</style>
