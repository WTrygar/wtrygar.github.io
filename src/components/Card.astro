---
import cssVars from "../styles/css-vars";

interface Props {
  class: string;
  title: string;
  imageUrl: string;
  img: string;
  text: string;
}

const { class: className, title, imageUrl, img, text } = Astro.props;
---

<div class={className}>
  <div class="card-image">
    <img src={img} alt="card image" />
  </div>
  <div class="card-text">
    <h3 class="card-title">{title}</h3>
    <p class="card-paragraph">{text}</p>
  </div>
</div>

<style define:vars={{ cssVars, image: `url("${img}")` }}>
  .first-card,
  .second-card,
  .third-card {
    width: 100%;
    height: 300px;
    margin: 10px 0;
    display: flex;
    flex-direction: column;
    justify-content: unset;
    align-items: center;
    border-radius: 15px;
    margin-top: 70px;
    margin-bottom: 100px;
  }

  .first-card .card-image {
    background-image: linear-gradient(to right, #ffffff, #d7d7d7);
  }
  .second-card .card-image {
    background-image: linear-gradient(#ffffff, #d7d7d7);
  }
  .third-card .card-image {
    background-image: linear-gradient(#d7d7d7, #ffffff);
  }

  .card-image {
    width: 15rem;
    height: 15rem;
    border-radius: 50%;
  }

  .card-image img {
    width: 15rem;
    height: 15rem;
  }

  .card-text {
    display: flex;
    flex-direction: column;
    justify-content: unset;
    align-items: center;
  }

  .first-card .card-text,
  .second-card .card-text,
  .third-card .card-text {
    text-align: center;
  }

  @media (min-width: 600px) and (max-width: 900px) {
    .first-card,
    .second-card,
    .third-card {
      flex-direction: row;
      margin-top: 0px;
      margin-bottom: 0px;
      gap: 20px;
    }
  }

  @media (min-width: 900px) {
  }
</style>
